<%- include('head')-%>
<style>
    #cartTabs .nav-link.active {
        background-color: rgba(93, 134, 150, 0.644); /* Màu nền khi nút active */
        color: white; /* Màu chữ */
        border: none; /* Loại bỏ viền */
    }
</style>
<!-- Cart Section Start -->
<div class="container py-5" style="margin-top: 100px">
    <div class="row mt-8">
        <!-- Left Section: Tabs for Tickets and Vouchers -->
        <div class="col-lg-7 mb-4">
            <div class="card">
                <div class="card-header" style="background-color: rgba(119, 170, 190, 0.863)">
                    <ul class="nav nav-tabs card-header-tabs" id="cartTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab" aria-controls="tickets" aria-selected="true">
                                Tickets
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link" id="vouchers-tab" data-bs-toggle="tab" data-bs-target="#vouchers" type="button" role="tab" aria-controls="vouchers" aria-selected="false">
                                Vouchers
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body" style="background-color: rgba(93, 134, 150, 0.644)">
                    <div class="tab-content" id="cartTabsContent">
                        <!-- Tickets Tab -->
                        <div class="tab-pane fade show active" id="tickets" role="tabpanel" aria-labelledby="tickets-tab">
                            <% tickets.forEach(ticket => { %>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="d-flex align-items-center">
                                    <img src="<%= ticket.imgUrl %>" alt="<%= ticket.name %>" class="img-thumbnail" style="width: 80px; height: 80px" />
                                    <div class="ms-3">
                                        <h6 class="mb-1"><%= ticket.name %></h6>
                                        <small>Price: <%= ticket.price %> VND</small>
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-outline-secondary btn-sm" id="minus-btn">-</button>
                                    <span class="mx-2" id="">0</span>
                                    <button class="btn btn-outline-secondary btn-sm" id="plus-btn">+</button>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                        <!-- Vouchers Tab -->
                        <div class="tab-pane fade" id="vouchers" role="tabpanel" aria-labelledby="vouchers-tab">
                            <% vouchers.forEach(voucher => { %>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h6 class="mb-1"><%= voucher.name %></h6>
                                    <small>Discount: <%= voucher.value %> VND</small>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Section: Payment Summary -->
        <div class="col-lg-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment Summary</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span><%= totalPrice %> VND</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Discount:</span>
                        <span>-<%= totalDiscount %> VND</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong><%= finalPrice %> VND</strong>
                    </div>
                    <button class="btn btn-primary w-100">Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Section End -->
<%- include('foot')-%>
